<h1><%= @post.title %></h1>
<p><img src="<%= @post.photo_url %>"></p>
<p>
  Tags:
  <% @post.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<%= link_to "Edit Post", edit_post_path(@post) %> |
<%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post? It'll be sucked into an abyss of nothingness forever..."} %><br><br>
<h3>Comments (<%= @post.comments.size %>)</h3>
<%= render partial: 'posts/comment', collection: @post.comments %>
<%= render partial: 'comments/form' %>
<%= link_to "<< Back to Post List", posts_path %>
